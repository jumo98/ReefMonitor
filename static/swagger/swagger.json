{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "ReefMonitor API"
    },
    "basePath": "/api/v1",
    "tags": [
        {
            "name": "aquariums",
            "description": "Everything about your Aquariums"
        }
    ],
    "schemes": [
        "https"
    ],
    "paths": {
        "/aquariums": {
            "get": {
                "tags": [
                    "aquariums"
                ],
                "summary": "get all your aquariums",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Aquarium"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "basicAuth": []
                    }
                ]
            }
        },
        "/aquariums/{id}": {
            "get": {
                "tags": [
                    "aquariums"
                ],
                "summary": "get a single of your aquariums",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the aquarium",
                        "required": true,
                        "type": "string",
                        "format": "uuid"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Aquarium"     
                        }
                    },
                    "403": {
                        "description": "No access to this aquarium."
                    },
                    "404": {
                        "description": "Aquarium was not found."
                    }
                },
                "security": [
                    {
                        "basicAuth": []
                    }
                ]
            }
        },
        "/aquariums/{id}/measurements": {
            "post": {
                "tags": [
                    "aquariums"
                ],
                "summary": "uploads an measurement for one aquarium",
                "description": "",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the aquarium",
                        "required": true,
                        "type": "string",
                        "format": "uuid"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Measurement object that needs to be added to the aquarium",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Measurement"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Measurement was created successfully",
                        "schema": {
                            "$ref": "#/definitions/Measurement"
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "403": {
                        "description": "No access to this aquarium."
                    },
                    "404": {
                        "description": "Aquarium was not found."
                    }
                },
                "security": [
                    {
                        "basicAuth": []
                    }
                ]
            }
        }
    },
    "securityDefinitions": {
        "basicAuth": {
            "type": "basic"
        }
    },
    "definitions": {
        "Aquarium": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "name": {
                    "type": "string"
                },
                "owner": {
                    "type": "string"
                },
                "create_date": {
                    "type": "string",
                    "format": "date-time"
                },
                "update_date": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "Parameter": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "enum": [
                        "Salinity",
                        "Temperature",
                        "Carbonate Hardness",
                        "Calcium",
                        "Magnesium"
                    ]
                },
                "value": {
                    "type": "number"
                }
            }
        },
        "Measurement": {
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "parameters": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Parameter"
                    }
                }
            }
        }
    }
}